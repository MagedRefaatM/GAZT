<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_guide_line1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_guide_line2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_guide_line3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_guide_line4"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_guide_line5"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.24"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.36"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.38"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line6"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line7"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line8"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.64"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line9"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_guide_line10"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_image_view"
        android:src="@drawable/ic_logo"
        android:contentDescription="@string/logo_description"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_line1"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guide_line2"
        app:layout_constraintLeft_toRightOf="@id/vertical_guide_line1"
        app:layout_constraintRight_toLeftOf="@id/vertical_guide_line2"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/please_insert_text_view"
        android:textStyle="normal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:text="@string/please_enter"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_line3"
        app:layout_constraintLeft_toRightOf="@id/vertical_guide_line1"
        app:layout_constraintRight_toLeftOf="@id/vertical_guide_line2"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:digits="123456789"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:id="@+id/edit_text1"
        android:gravity="center"
        android:cursorVisible="false"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_line4"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guide_line5"
        app:layout_constraintLeft_toRightOf="@id/vertical_guide_line3"
        app:layout_constraintRight_toLeftOf="@id/vertical_guide_line4"
        android:background="@drawable/round_shape"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:digits="123456789"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:id="@+id/edit_text2"
        android:gravity="center"
        android:cursorVisible="false"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_line4"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guide_line5"
        app:layout_constraintLeft_toRightOf="@id/vertical_guide_line5"
        app:layout_constraintRight_toLeftOf="@id/vertical_guide_line6"
        android:background="@drawable/round_shape"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:digits="123456789"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:id="@+id/edit_text3"
        android:gravity="center"
        android:cursorVisible="false"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_line4"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guide_line5"
        app:layout_constraintLeft_toRightOf="@id/vertical_guide_line7"
        app:layout_constraintRight_toLeftOf="@id/vertical_guide_line8"
        android:background="@drawable/round_shape"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:digits="123456789"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:id="@+id/edit_text4"
        android:gravity="center"
        android:cursorVisible="false"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_line4"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guide_line5"
        app:layout_constraintLeft_toRightOf="@id/vertical_guide_line9"
        app:layout_constraintRight_toLeftOf="@id/vertical_guide_line10"
        android:background="@drawable/round_shape"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

</androidx.constraintlayout.widget.ConstraintLayout>